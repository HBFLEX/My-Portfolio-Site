---
const projects = await Astro.glob('../pages/*.md')
---

<div class="mt-5">
    <h1 class="mb-0 text-center projectsTitle">Projects</h1>
    <div class="row">
        {
            projects.map((project) => (
                <div class="col-md-4">
                    <a target="_blank" style="text-decoration: none">
                        <div class='mt-5 shadow-lg rounded' data-aos="zoom-in">
                            <img 
                                src={project.frontmatter.imgUrl} 
                                width={'100%'}
                                style="border: 2px solid rgba(0, 0, 0, 0.2)"
                            />
                            <div class='bg-white p-2 projectDescription'>
                                {
                                    project.frontmatter.techStacks.map((stack) => (
                                        <span class='bg-primary text-white rounded m-1'>
                                            <small>{stack}</small>
                                        </span>
                                    ))
                                }
                                <h4 class='text-center mt-3'>{project.frontmatter.name}</h4>
                                <p class='text-muted text-center'>
                                    {project.frontmatter.description}
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
            ))
        }
    </div>
</div>