---
const { imgUrl, techStacks, name, url, description } = Astro.props.project
---

<a href={url} target="_blank" style="text-decoration: none">
    <div class='mt-5 shadow-lg rounded' data-aos="zoom-in">
        <img 
            src={imgUrl} 
            width={'100%'}
            style="border: 2px solid rgba(0, 0, 0, 0.2)"
        />
        <div class='bg-white p-2 projectDescription'>
            {
                techStacks.map((stack) => (
                    <span class='bg-primary text-white rounded m-1'>
                        <small>{stack}</small>
                    </span>
                ))
            }
            <h4 class='text-center mt-3'>{name}</h4>
            <p class='text-muted text-center'>
                {description}
            </p>
        </div>
    </div>
</a>